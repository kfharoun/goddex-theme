{{ 'checkers.css' | asset_url | stylesheet_tag }}

<div class="checkerboard-banner">
    <svg width="100%" height="100%" viewBox="0 0 1440 108" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
      <defs>
        <!-- Define a pattern with slightly larger squares -->
        <pattern id="checker-pattern" width="120" height="120" patternUnits="userSpaceOnUse">
          <rect width="60" height="60" x="0" y="0" fill="{{ section.settings.color_1 | default: '#C6CF8E' }}" fill-opacity="0.35" />
          <rect width="60" height="60" x="60" y="0" fill="{{ section.settings.color_2 | default: '#FFFFFF' }}" />
          <rect width="60" height="60" x="0" y="60" fill="{{ section.settings.color_2 | default: '#FFFFFF' }}" />
          <rect width="60" height="60" x="60" y="60" fill="{{ section.settings.color_1 | default: '#C6CF8E' }}" fill-opacity="0.35" />
        </pattern>
      </defs>
      
      <!-- Apply the pattern across the entire width -->
      <rect width="100%" height="108" fill="url(#checker-pattern)" />
    </svg>
  </div>

{% schema %}
{
  "name": "Checkerboard Section",
  "settings": [
    {
      "type": "color",
      "id": "color_1",
      "label": "First Checker Color",
      "default": "#C6CF8E"
    },
    {
      "type": "color",
      "id": "color_2",
      "label": "Second Checker Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Checkerboard"
    }
  ]
}
{% endschema %}
